<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/image_1"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:src="@drawable/motifbatik"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:id="@+id/image_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/hp"
        android:layout_below="@id/image_1"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_2"
        android:text="SELAMAT DATANG"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt1"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="22dp"
        android:text="Jelajahi fitur-fitur luar biasa yang akan membuat pengalamanmu semakin mudah, cepat, dan menyenangkan. Mulailah petualangan digitalmu sekarang dan temukan kemudahan yang telah kami siapkan untukmu!"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnMasuk"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_below="@id/txt2"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#3F51B5"
        android:text="Masuk"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnDaftar"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_below="@id/txt2"
        android:textSize="18sp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@id/btnMasuk"
        android:layout_marginStart="10dp"
        android:text="Daftar"
        android:backgroundTint="#3F51B5"
        android:textColor="@android:color/white"/>
</RelativeLayout>